----------------------------------------------------------------------------------------------------
class private c_add_math_test =
----------------------------------------------------------------------------------------------------

    ------------------------------------------------------------------------------------------------
    override run_test =
    ------------------------------------------------------------------------------------------------
    begin
      res:=a+b;
      fail_if_false(res=10,'chyba při sčítání');
      end run_test;



    ------------------------------------------------------------------------------------------------
    entry =
    ------------------------------------------------------------------------------------------------
    begin
      a:=8;
      b:=3;
      end entry;



    ------------------------------------------------------------------------------------------------
    exit =
    ------------------------------------------------------------------------------------------------
    begin
      a:=0;
      b:=0;
      end exit;

    end c_add_math_test;



----------------------------------------------------------------------------------------------------
class private c_sub_math_test =
----------------------------------------------------------------------------------------------------

    ------------------------------------------------------------------------------------------------
    override run_test =
    ------------------------------------------------------------------------------------------------
    begin
      stop_after_fail:=false;
      res:=a-b;
      fail_if_false(res=4,'chyba při odečítání');
      end run_test;



    ------------------------------------------------------------------------------------------------
    entry =
    ------------------------------------------------------------------------------------------------
    begin
      a:=8;
      b:=3;
      end entry;



    ------------------------------------------------------------------------------------------------
    exit =
    ------------------------------------------------------------------------------------------------
    begin
      a:=0;
      b:=0;
      end exit;

    end c_sub_math_test;



----------------------------------------------------------------------------------------------------
class private c_mul_math_test =
-- Primitivní test násobení dvou čísel.
----------------------------------------------------------------------------------------------------

    ------------------------------------------------------------------------------------------------
    override run_test =
    ------------------------------------------------------------------------------------------------
    begin
      res:=a*b;
      fail_if_false(res=90,'chyba při násobení');
      end run_test;



    ------------------------------------------------------------------------------------------------
    entry =
    ------------------------------------------------------------------------------------------------
    begin
      a:=18;
      b:=5;
      end entry;



    ------------------------------------------------------------------------------------------------
    exit =
    ------------------------------------------------------------------------------------------------
    begin
      a:=0;
      b:=0;
      end exit;

    end c_mul_math_test;

  end test_example;