type
  -- the direction of walking through a list
  t_list_walking_direction = enum
     tlwd_forward;                               -- from the first item to the last
     tlwd_backward;                              -- from the last item to the first
     end enum;

  -- výsledek operace porovnání dvou klíčů uzlů, složek, atd...
  t_compare_result = enum
      cr_equal;                                  -- klíče si jsou rovny
      cr_bigger;                                 -- klíč je větší
      cr_smaller;                                -- klíč je menší
      end enum for size use 4;

  -- řízení pořadí uzlů při procházení stromem
  t_tree_walking_direction = enum
      ttwd_prefix;                               -- uzel -> levý -> pravý
      ttwd_inv_prefix;                           -- uzel -> pravý -> levý
      ttwd_postfix;                              -- levý -> pravý -> uzel
      ttwd_inv_postfix;                          -- pravý -> levý -> uzel
      ttwd_infix;                                -- levý -> uzel -> pravý, jen pro binární strom
      ttwd_inv_infix;                            -- pravý -> uzel -> levý, jen pro binární strom
      end enum;
  t_tree_walking_direction_set = set of t_tree_walking_direction;

type
  -- a hash code
  t_hash_item_id   = protected t_unsigned;

message
  list_error       : exception;                  -- raised when an error occurs during manipulation with the list
  tree_error       : exception;                  -- chyba při práci se stromy

end structures;