      sign         : t_sign_mode := tsm_empty;   -- zp∙sob zachßzenφ s kladn²m znamΘnkem
      aligned      : t_logical := false;         -- True = znamΘnko (je-li uvedeno) je zcela vlevo
                                                 -- False = znamΘnko je t∞sn∞ p°ed prvnφ Φφslicφ
      fill         : t_char32 := " ";            -- v²pl≥ov² znak 
      oversize     : t_oversize_mode := tom_full;-- zp∙sob zobrazenφ Φφsla, kterΘ se nevejde
      radix        : t_radix := 10;              -- zßklad Φφsla
      end record;

  --  zßznam pro zpracovßnφ celΘho Φφsla %%CZ
  t_integer_parse  = record
      radix        : t_radix := 10;              -- zßklad Φφsla
      end record;

  -- formßtovacφ zßznam pro floating-point Φφsla %%CZ
  t_float_format   = record
      width        : t_unsigned := 0;            -- poΦet mφst pro zarovnßnφ Φφsla       
      decimals     : t_unsigned := 0;            -- poΦet desetinn²ch mφst
      sign         : t_sign_mode :=tsm_empty;    -- zp∙sob zachßzenφ s kladn²m znamΘnkem
      aligned      : t_logical := false;         -- True = znamΘnko (je-li uvedeno) je zcela vlevo
                                                 -- False = znamΘnko je t∞sn∞ p°ed prvnφ Φφslicφ
      oversize     : t_oversize_mode := tom_error;   -- zp∙sob zobrazenφ Φφsla, kterΘ se nevejde
      conversion   : t_float_conversion := tfc_sci;  -- typ formatovani
      end record;

  -- zßznam pro zpracovßnφ floating-point Φφsla %%CZ
  t_float_parse    = record
      min          : t_extended;                 -- zatφm nic
      max          : t_extended;                 -- zatφm nic
      end record;


const
  -- %%TODO konstanty zruÜit a default hodnoty paramet∙ p°ed∞lat na :value
  c_integer_format_default : t_integer_format = [for radix use 10];
