with standard.strings;
  
message
  conversion_error extend numeric_error;         -- exception

type
  t_radix          = t_unsigned range 2..36;     -- zßklad ??seln? soustavy 

  t_conversion_result = enum 
      tcres_ok;                                  -- no error                            
      tcres_not_a_number;                        -- number contains illegal character
      tcres_out_of_range;                        -- number is out of implicit or desired limits
      end enum;
    
  t_sign_mode      = enum                        -- conversion of positive sign
      tsm_empty;                                 -- negative: '-', positive: '' (empty)
      tsm_plus;                                  -- negative: '-', positive: '+' (plus sign)
      tsm_space;                                 -- negative: '-', positive: ' ' (space)
      end enum;

  t_oversize_mode  = enum
      tom_error;                               -- vyhlßs? se v2jimka
      tom_full;                                -- ??slo se zobraz? na pln2 po?et platn2ch m?st
      tom_asterisk;                            -- zobraz? se pole hv?zdi?ek
      end enum;

  t_float_conversion = enum
      tfc_sci;                                   -- exponencißln? formßt
      tfc_fix;                                   -- pevn2 po?et desetinn2ch m?st
      tfc_eng;                                   -- exponencißln? formßt s exponentem d?liteln2m 3
      tfc_prefix;                                -- s p°ipojen?m prefixu fyzikßln? jednotky (m, k, G, ...)
      end enum;

  -- formßtovac? zßznam pro celß ??sla %%CZ
  t_integer_format  = record
      width        : t_unsigned := 0;            -- po?et m?st pro zarovnßn? ??sla       
                                                 -- 0 ur?uje automatick2 formßt
      sign         : t_sign_mode := tsm_empty;   -- zp•sob zachßzen? s kladn2m znam?nkem
      aligned      : t_logical := false;         -- True = znam?nko (je-li uvedeno) je zcela vlevo
                                                 -- False = znam?nko je t?sn? p°ed prvn? ??slic?
      fill         : t_char32 := " ";            -- v2pl?ov2 znak 
      oversize     : t_oversize_mode := tom_full;-- zp•sob zobrazen? ??sla, kter? se nevejde
      radix        : t_radix := 10;              -- zßklad ??sla
      end record;

  --  zßznam pro zpracovßn? cel?ho ??sla %%CZ
  t_integer_parse  = record
      radix        : t_radix := 10;              -- zßklad ??sla
      end record;

  -- formßtovac? zßznam pro floating-point ??sla %%CZ
  t_float_format   = record
      width        : t_unsigned := 0;            -- po?et m?st pro zarovnßn? ??sla       
      decimals     : t_unsigned := 0;            -- po?et desetinn2ch m?st
      sign         : t_sign_mode :=tsm_empty;    -- zp•sob zachßzen? s kladn2m znam?nkem
      aligned      : t_logical := false;         -- True = znam?nko (je-li uvedeno) je zcela vlevo
                                                 -- False = znam?nko je t?sn? p°ed prvn? ??slic?
      oversize     : t_oversize_mode := tom_error;   -- zp•sob zobrazen? ??sla, kter? se nevejde
      conversion   : t_float_conversion := tfc_sci;  -- typ formatovani
      end record;

  -- zßznam pro zpracovßn? floating-point ??sla %%CZ
  t_float_parse    = record
      min          : t_extended;                 -- zat?m nic
      max          : t_extended;                 -- zat?m nic
      end record;


const
  -- %%TODO konstanty zruÜit a default hodnoty paramet• p°ed?lat na :value
  c_integer_format_default : t_integer_format = [for radix use 10];
  c_integer_format_hexadecimal : t_integer_format = [for radix use 16];
  c_float_format_default   : t_float_format= [];
  c_integer_parse_default : t_integer_parse = [for radix use 10];
  c_integer_parse_hexadecimal : t_integer_parse = [for radix use 16];
  c_float_parse_default   : t_float_parse = [];



----------------------------------------------------------------------------------------------------
procedure unsigned_to_string (
    num            : in t_unsigned;              -- number to convert
    format         : in t_integer_format := c_integer_format_default)  -- poŘadovan2 formßt ??sla %%CZ
    return t_char32str;                          -- it's string representation
----------------------------------------------------------------------------------------------------
procedure signed_to_string (
    num            : in t_signed;                -- number to convert
    format         : in t_integer_format := c_integer_format_default)  -- poŘadovan2 formßt ??sla %%CZ
    return t_char32str;                          -- it's string representation
----------------------------------------------------------------------------------------------------
procedure float_to_string (
    num            : in t_extended;              -- ??slo kter? p°ev?st %%CZ
    format         : in t_float_format := c_float_format_default)      -- poŘadovan2 formßt ??sla %%CZ
    return t_char32str;                          -- °et?zcovß reprezentace
-- P°evede zaokrouhlenou hodnotu NUM na °et?zec v rozsahu 0 aŘ + 10e18-1.
----------------------------------------------------------------------------------------------------
procedure string_to_unsigned (
    s              : in t_char32ustr;            -- string represetation of a value
    parse          : in t_integer_parse := c_integer_parse_default)  -- poŘadovan2 formßt ??sla %%CZ
    return t_unsigned;
------------------------------------------------------------------------------
procedure string_to_signed (
    s              : in t_char32ustr;            -- string represetation of a value
    parse          : in t_integer_parse := c_integer_parse_default)  -- poŘadovan2 formßt ??sla %%CZ
    return t_signed;
----------------------------------------------------------------------------------------------------
procedure string_to_float (
    s              : in t_char32ustr;            -- string represetation of a value
    parse          : in t_float_parse := c_float_parse_default)      -- poŘadovan2 formßt ??sla %%CZ
    return t_extended;
-- P°evede cel? ??slo v rozsahu 0 aŘ + 10e18-1 na float point.
-- ?et?zec str 
--   - mus? m?t d?lku v rozsahu 1 aŘ 18 znak•,
--   - nesm? obsahovat jin? znaky neŘ "0" az "9".
