  standard.characters,
  standard.characters.ascii;


----------------------------------------------------------------------------------------------------
procedure write =
-- Write string to the cursor position.
----------------------------------------------------------------------------------------------------
var
  astr         : pasciistr;
  result       : tsys_size;
  error        : tsys_int;

begin
  new astr range s:length;
  to_ascii(s,astr);
  sys_write(sys_stdout,astr^[1],tsys_size(astr^:length),result,error);
  --%%ERROR
leave
  discard astr;
  end write;



----------------------------------------------------------------------------------------------------
procedure write_line =
-- Write string to the cursor position and move the cursor to the next line.
----------------------------------------------------------------------------------------------------
begin
  write(s);
  write(\10);
  end write_line;



